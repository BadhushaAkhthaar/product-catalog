<mvc:View xmlns:smartfilterbar="sap.ui.comp.smartfilterbar" xmlns:smarttable="sap.ui.comp.smarttable" controllerName="productcatalog.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
        <smartfilterbar:SmartFilterBar 
            id="smartFilterBar" 
            entitySet="xALKxPRD_CATALOG_SRV" 
            basicSearchFieldName="prod_id" 
            enableBasicSearch="true"></smartfilterbar:SmartFilterBar>
        <smarttable:SmartTable 
            id="catalogtable" 
            entitySet="xALKxPRD_CATALOG_SRV"
            smartFilterId="smartFilterBar"
            enableAutoBinding="true" 
            class="sapUiResponsiveContentPadding" 
            enableAutoColumnWidth="true">
        </smarttable:SmartTable>
        </content>
    </Page>
</mvc:View>
